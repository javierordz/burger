<div class="container">
  <div class="jumbotron">
    <h1 class="display-4">Eat-Da-Burger!</h1>
  </div>

  <div class="row">
    <div class="col-lg">
      <h2>TO EAT</h2>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.id}} || {{this.burger_name}}
              <button data-burger-id="{{this.id}}" class="devour-burger">Devour!</button>
            </li>
          {{/if}}
        {{/each}}
    </div>

  <div class="col">
    <h2>EATEN</h2>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li>
            {{this.id}} || {{this.burger_name}}
          </li>
        {{/unless}}
      {{/each}}
    </div>
  </div>
  <br><hr>

  <div class="row">
    <h2>CREATE A BURGER</h2>
    <br>
    
    <form id="addburger" class="button-size">
      <textarea typce="text" name="plan"></textarea>
      <button type="submit">Update Plan!</button>
    </form>
  </div>

<script>
  $("#addburger").on("submit", function(event) {
    event.preventDefault();

    var newBurger = {
      burger_name: $("#addburger [name=plan]").val().trim();
      devoured: false;
    }

    $.ajax("/burgers", {
      type: "POST",
      data: newBurger
    }).then(
      function() {
        console.log("created new burger");
        location.reload();
      }
    );
  })
</script>




</div>